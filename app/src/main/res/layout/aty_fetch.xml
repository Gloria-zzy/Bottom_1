<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Fetch_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/item_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="你的代号"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/usr_head"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/item_head" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="请选择您方便的收货时间："
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/time_spinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/spinner_border" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignBottom="@+id/time_spinner"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/item_down_arrow" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="请选择您方便的收货地点："
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/loc_spinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/spinner_border" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignBottom="@+id/loc_spinner"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/item_down_arrow" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="备注："
            android:textSize="20sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="100sp"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:minLines="6"
            android:background="@drawable/spinner_border"
            android:padding="10sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:text="我同意UD平台代取业务用户协议"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/btn_send_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
